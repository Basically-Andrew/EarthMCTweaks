{
  "schemaVersion": 1,
  "id": "emct",
  "version": "${version}",

  "name": "EarthMCTweaks",
  "description": "Enhance your gameplay with this Minecraft mod providing tweaks made for EarthMC.",
  "authors": [
    "Basically_Andrew"
  ],
  "contact": {
    "homepage": "https://github.com/Basically-Andrew/EarthMCTweaks",
    "issues": "https://github.com/Basically-Andrew/EarthMCTweaks/issues"
  },

  "license": "GNU GPLv3",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.andre.emct.EarthMCTweaks"
    ]
  },
  "mixins": [
    "emct.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "another-mod": "*"
  },
  "custom": {
    "modmenu:clientsideOnly": true
  }
}
